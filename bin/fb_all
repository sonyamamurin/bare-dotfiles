#!/bin/bash

################################################################################
## Script to run filebot in rtorrent data folder using exclude file to catch
## files missed by rt post execution script.
################################################################################

#echo "`date -u` Start script." >> $HOME/fballdebug.log   # debug

/usr/bin/filebot -script fn:amc "$HOME/bay/vind/rtorrent.data/" --output "$HOME/bay/vind/plex.bibl" --log-file /home/farligm/.filebot/logs/rt_catchall_weekly.log --action duplicate --conflict auto -non-strict --def unsorted=y artwork=y subtitles=en,sv skipExtract=y excludeList=amc.excludes >/dev/null

#echo "`date -u` End script." >> $HOME/fballdebug.log     #debug
