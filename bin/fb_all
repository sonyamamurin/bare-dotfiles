#!/usr/bin/env bash

################################################################################
## Script to run filebot in rtorrent data folder using exclude file to catch
## files missed by rt post execution script.
################################################################################

# Load global vars from source_confidentials
source $HOME/bin/source_confidentials

/usr/bin/filebot -script fn:amc "$server_media_dir" --output "$server_plex_dir" --log-file $HOME/.filebot/logs/rt_catchall_weekly.log --action duplicate --conflict auto -non-strict --def unsorted=y artwork=y subtitles=en,sv skipExtract=y excludeList=amc.excludes
