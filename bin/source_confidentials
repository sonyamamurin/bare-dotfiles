#!/usr/bin/env sh

## Script to source file .confidentials in Dropbox containing global variables.

export dropboxPath

if command -v jq >/dev/null 2>&1 &&  [ -f "$HOME/.dropbox/info.json" ] ; then
    dropboxPath=$(jq -r .personal.path "$HOME/.dropbox/info.json")
    . "$dropboxPath/.confidentials"
elif [ -f "$HOME/.confidentials" ] ; then
    . "$HOME/.confidentials"
else
	echo "Missing jq, Dropbox path or .confidentials in ~."
fi

