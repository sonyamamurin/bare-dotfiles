#!/usr/bin/env bash
# shellcheck disable=2154

## Copy my syncthing folders to acs
## TODO: Should I put syncthing folders in a global variable?

excludeFile=$server_syncthing_dir/exclude-rclone.txt
logFile=$server_syncthing_dir/rclone_st.log

localBasePath=$server_syncthing_dir
remoteBasePath=$encrypted_acd:$acd_backup_dir

toBackup=( 'Arkivy' 'Bildervf' 'iTunesMusic' )

for i in "${toBackup[@]}" ; do
	/usr/sbin/rclone sync --delete-excluded --checksum --log-file $logFile --exclude-from $excludeFile $localBasePath/$i $remoteBasePath/$i
done
