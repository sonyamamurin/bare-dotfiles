#!/usr/bin/env bash

################################################################################
## Copy my syncthing folders to acs
################################################################################

dotfiles_dir=$HOME/tetov-dotfiles

# Load global vars from source_confidentials
source $dotfiles_dir/bin/source_confidentials

excludeFile=$server_syncthing_dir/exclude-rclone.txt
logFile=$server_syncthing_dir/rclone_st.log

localBasePath=$server_syncthing_dir
remoteBasePath=$encrypted_acd:$acd_backup_dir

toBackup=( 'Arkivy' 'Bildervf' 'iTunesMusic' )

for i in "${toBackup[@]}" ; do
	/usr/sbin/rclone sync -q --delete-excluded --checksum --log-file $logFile --exclude-from $excludeFile $localBasePath/$i $remoteBasePath/$i
done
