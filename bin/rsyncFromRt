#!/usr/bin/env bash

################################################################################
## Grab specified folder or file from media dir to to drop dir
## TODO: Add connectivity check
################################################################################

dl="\"$1\""

sourceDir=$server_user@$server_url:$server_media_dir
targetDir=$local_drop_dir

/usr/local/bin/rsync -hvrze 'ssh -q' "$sourceDir"/"$dl" --progress "$targetDir"
