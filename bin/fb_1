#!/usr/bin/env bash
# shellcheck disable=2154

################################################################################
## Script to run filebot on directory.
## Called by rtorrent; system.method.set_key = event.download.finished,fb_1,"execute={$HOME/bin/fb_1,$d.get_base_path=,$d.get_name=}"
################################################################################

#echo "`date -u` Start script." >> $HOME/fballdebug.log     #debug

# Input Parameters
path="$1"
name="$2"

/usr/bin/filebot -script fn:amc --output "$server_plex_dir" --log-file $HOME/.filebot/logs/rt_amc_on_complete.log --action duplicate --conflict auto -non-strict --def unsorted=y artwork=y subtitles=en,sv skipExtract=y excludeList=amc.excludes ut_dir="$path" ut_kind="multi" ut_title="$name" &

#echo "`date -u` End script." >> $HOME/fballdebug.log       #debug
